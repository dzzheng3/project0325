<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"
        app:title="Decision Game"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:titleTextColor="@color/colorWhite">

    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:elevation="5dp">

        <RelativeLayout
            android:id="@+id/msg_layout"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:tint="@color/actionbar"
                android:layout_gravity="center"
                android:id="@+id/iv_doller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dollor"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/actionbar"
                android:text="Do you want to pay $20 dollor for this paint?"
                android:textSize="20sp"
                android:layout_alignTop="@+id/iv_doller"
                android:layout_toEndOf="@+id/iv_doller" />

            <TextView
                android:id="@+id/created_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/actionbar"
                android:text="Created_date"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_below="@+id/game_name"
                android:layout_toEndOf="@+id/iv_doller" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonbg"
            android:text="yes"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_margin="20dp"
            android:background="@drawable/buttonbg"
            android:text="No"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Result"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />
</LinearLayout>